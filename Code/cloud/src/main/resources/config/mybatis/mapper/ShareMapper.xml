<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ztu.cloud.cloud.common.dao.mysql.ShareMapper">
    <!--    根据用户id获得用户信息-->
    <select id="getShareById"
            parameterType="String"
            resultType="com.ztu.cloud.cloud.common.bean.mysql.Share">
        select * from share where ID=#{id}
    </select>
    <select id="getShareByUserId"
            parameterType="int"
            resultType="com.ztu.cloud.cloud.common.bean.mysql.Share">
        select * from share where userId=#{userId}
    </select>
    <!--    根据分页文件列表-->
    <select id="getShare"
            parameterType="int"
            resultType="com.ztu.cloud.cloud.common.bean.mysql.Share">
        select * from share limit #{start},#{end}
    </select>
    <!--    通过用户信息实体类修改用户信息-->
    <update id="updateShare"
            parameterType="com.ztu.cloud.cloud.common.bean.mysql.Share">
        update share
        set
        <if test="name != null">
            name = #{name}
        </if>
        <if test="password != null">
            ,password = #{password}
        </if>
        <if test="validTime >= 0">
            ,validTime = #{validTime}
        </if>
        <choose>
            <when test="id != null">
                where id = #{id}
            </when>
            <otherwise>
                where id = -1
            </otherwise>
        </choose>
    </update>
    <!--    根据用户信息实体类插入一个用户-->
    <insert id="insertShare"
            parameterType="com.ztu.cloud.cloud.common.bean.mysql.Share">
        insert into share (id,userId,repoId,name,password,status,createTime,validTime)
        values (#{id},#{userId},#{repoId},#{name},#{password},#{status},#{createTime},#{validTime})
    </insert>
    <delete id="deleteShareById"
            parameterType="String">
        delete from share where id=#{id}
    </delete>
    <!--    修改用户密码-->
    <update id="updateShareStatus">
        update share
        set status = #{status}
        where id = #{id}
    </update>
</mapper>